@model OnlineTest.Models.Question

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Question")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question_Name)
        </dd>

        <dt>
            @Html.DisplayName("Option 1")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Option_one)
        </dd>

        <dt>
            @Html.DisplayName("Option 2")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Option_two)
        </dd>

        <dt>
            @Html.DisplayName("Option Three")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Option_three)
        </dd>

        <dt>
            @Html.DisplayName("Option 4")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Option_four)
        </dd>

        <dt>
            @Html.DisplayName("Answer")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question_Answer)
        </dd>

        <dt>
            @Html.DisplayName("Test Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Test_Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <h4> @Html.ActionLink("Back to List", "Index") </h4>
        </div>
    }
</div>
